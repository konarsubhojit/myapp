# Docker Environment Variables Example
# Copy this file to .env and fill in your values before running docker-compose

# ===========================================
# Backend Configuration
# ===========================================

# Neon PostgreSQL connection string (REQUIRED)
# Get your connection string from https://neon.tech
NEON_DATABASE_URL=postgresql://user:password@ep-example-pooler.aws.neon.tech/neondb?sslmode=require

# Vercel Blob Storage token for image uploads (optional)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Authentication Configuration
# Set to 'true' to disable authentication (for development only)
AUTH_DISABLED=false

# Google OAuth Configuration (for backend validation)
GOOGLE_CLIENT_ID=your_google_client_id_here

# ===========================================
# Frontend Configuration
# ===========================================

# API URL for the backend service (REQUIRED)
# Use the internal Docker network URL or your deployed backend URL
# For local Docker: http://localhost:5000/api
# For production: https://your-backend-domain.com/api
VITE_API_URL=http://localhost:5000/api

# Google OAuth Configuration (for frontend)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
